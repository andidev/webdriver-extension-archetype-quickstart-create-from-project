<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- Console Appender -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%cyan(%d{"HH:mm:ss.SSS"}) %highlight(%-5level   %-130message)   %cyan(%c{0}:%line) %n</pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="console" />
    </root>

</configuration>